{
    "name": "paradisec-data-loader",
    "productName": "PARADISEC Data Loader",
    "version": "1.3.0",
    "description": "My Electron application description",
    "main": "src/index.js",
    "scripts": {
        "develop": "electron-webpack dev",
        "compile": "electron-webpack",
        "dist": "npm run compile && electron-builder",
        "dist:dir": "npm run dist --dir -c.compression=store -c.mac.identity=null",
        "server": "npm install && node_modules/gulp/bin/gulp.js develop",
        "test": "NODE_ENV='development' ./node_modules/.bin/mocha --require @babel/register --watch **/*.spec.js",
        "build:mac": "electron-webpack && electron-builder --mac",
        "publish": "electron-builder --publish always"
    },
    "keywords": [],
    "author": "Marco La Rosa",
    "license": "MIT",
    "build": {
        "appId": "au.org.paradisec.data-loader.app",
        "productName": "PARADISEC Data Loader",
        "mac": {
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "entitlements": "./mac.plist",
            "entitlementsInherit": "./mac.plist",
            "target": [
                "dmg",
                "zip"
            ]
        },
        "win": {},
        "linux": {},
        "publish": [
            "github"
        ],
        "extraResources": [
            {
                "from": "src/viewer",
                "to": "viewer"
            },
            {
                "from": "src/services/templates",
                "to": "templates"
            },
            {
                "from": "node_modules/bootstrap/dist/css/bootstrap.min.css",
                "to": "templates/bootstrap.min.css"
            },
            {
                "from": "node_modules/@fortawesome/fontawesome-free/js/all.js",
                "to": "templates/fontawesome.js"
            }
        ]
    },
    "electronWebpack": {
        "renderer": {
            "webpackConfig": "webpack.extra-config.js"
        },
        "main": {}
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^5.11.2",
        "@fortawesome/fontawesome-pro": "^5.11.2",
        "@fortawesome/fontawesome-svg-core": "^1.2.25",
        "bootstrap": "^4.1.3",
        "chai-json-schema": "^1.5.1",
        "core-js": "^3.3.5",
        "electron-root-path": "^1.0.9",
        "electron-updater": "^4.1.2",
        "element-ui": "^2.12.0",
        "fs-extra": "^8.1.0",
        "nunjucks": "^3.2.0",
        "regenerator-runtime": "^0.13.3",
        "shelljs": "^0.8.3",
        "source-map-support": "^0.5.13",
        "ssh2": "^0.8.5",
        "telnet-client": "^1.2.1",
        "vue": "^2.6.10",
        "vue-router": "^3.1.3",
        "vue-scrollto": "^2.17.1",
        "vuex": "^3.1.1",
        "walk": "^2.3.14",
        "xmldom": "^0.1.27"
    },
    "devDependencies": {
        "@babel/cli": "^7.6.4",
        "@babel/core": "^7.6.4",
        "@babel/node": "^7.6.3",
        "@babel/preset-env": "^7.6.3",
        "@babel/register": "^7.6.2",
        "chai": "^4.2.0",
        "copy-webpack-plugin": "^5.0.4",
        "electron": "^6.0.12",
        "electron-builder": "^21.2.0",
        "electron-webpack": "^2.7.4",
        "electron-webpack-vue": "^2.3.0",
        "eslint": "^6.6.0",
        "fsevents": "^2.1.1",
        "html-webpack-plugin": "^3.2.0",
        "jquery": "^3.4.1",
        "lodash": "^4.17.15",
        "mocha": "^6.2.2",
        "node-sass": "^4.13.0",
        "popper.js": "^1.16.0",
        "sass-loader": "^8.0.0",
        "webpack": "^4.41.2",
        "webpack-node-externals": "^1.7.2"
    }
}

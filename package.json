{
    "name": "paradisec-data-loader",
    "productName": "PARADISEC Data Loader",
    "version": "1.0.0",
    "description": "My Electron application description",
    "main": "src/index.js",
    "scripts": {
        "develop": "electron-webpack dev",
        "compile": "electron-webpack",
        "dist": "npm run compile && electron-builder",
        "dist:dir": "npm run dist --dir -c.compression=store -c.mac.identity=null",
        "server": "npm install && node_modules/gulp/bin/gulp.js develop",
        "test": "gulp test",
        "build:mac": "electron-webpack && electron-builder --mac"
    },
    "keywords": [],
    "author": "Marco La Rosa",
    "license": "MIT",
    "build": {
        "appId": "au.org.paradisec.data-loader.app",
        "productName": "PARADISEC Data Loader",
        "mac": {},
        "win": {},
        "linux": {},
        "extraResources": [
            {
                "from": "src/viewer",
                "to": "viewer"
            },
            {
                "from": "src/services/templates",
                "to": "templates"
            },
            {
                "from": "node_modules/bootstrap/dist/css/bootstrap.min.css",
                "to": "templates/bootstrap.min.css"
            },
            {
                "from": "node_modules/@fortawesome/fontawesome-free/js/all.js",
                "to": "templates/fontawesome.js"
            }
        ]
    },
    "electronWebpack": {
        "renderer": {
            "webpackConfig": "webpack.extra-config.js"
        },
        "main": {}
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^5.8.1",
        "@fortawesome/fontawesome-pro": "^5.8.1",
        "@fortawesome/fontawesome-svg-core": "^1.2.17",
        "bootstrap": "^4.3.1",
        "chai-json-schema": "^1.5.0",
        "electron-root-path": "^1.0.9",
        "electron-updater": "^4.0.0",
        "element-ui": "^2.7.2",
        "fs-extra": "^6.0.1",
        "lodash": "^4.17.11",
        "nunjucks": "^3.2.0",
        "shelljs": "^0.8.3",
        "source-map-support": "^0.5.12",
        "ssh2": "^0.6.2",
        "telnet-client": "^0.15.8",
        "vue": "^2.6.10",
        "vue-router": "^3.0.6",
        "vue-scrollto": "^2.15.0",
        "vuex": "^3.1.0",
        "xmldom": "^0.1.27",
        "yargs": "^12.0.5"
    },
    "devDependencies": {
        "chai": "^4.2.0",
        "copy-webpack-plugin": "^4.6.0",
        "electron": "^4.1.4",
        "electron-builder": "^20.35.0",
        "electron-webpack": "^2.4.0",
        "electron-webpack-vue": "^2.2.3",
        "eslint": "^5.16.0",
        "gulp": "^4.0.1",
        "html-webpack-plugin": "^3.2.0",
        "jquery": "^3.4.0",
        "lodash": "^4.17.11",
        "node-sass": "^4.10.0",
        "popper.js": "^1.15.0",
        "restify": "^7.2.2",
        "restify-cors-middleware": "^1.1.1",
        "restify-errors": "^6.1.1",
        "sass-loader": "^7.1.0",
        "webpack": "^4.30.0",
        "webpack-node-externals": "^1.7.2"
    }
}

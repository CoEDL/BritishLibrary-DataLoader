<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8 ">
    <meta name="viewport " content="width=device-width, initial-scale=1, shrink-to-fit=no ">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="./assets/bootstrap.min.css">
    <link rel="stylesheet" href="./assets/styles.css">
</head>

<body class="main-viewer-color">
    <nav class="navbar navbar-expand-lg">
        <div class="navbar-brand">
            PARADISEC Offline Catalog
        </div>
    </nav>

    <div class="container-fluid grow">
        <div class="d-flex py-4">
            <div class="flex-grow-1 px-2">
                <div class="row">
                    <div class="col text-center">
                        <h2>{{data.title}}</h2>
                    </div>
                </div>

                <div class="row py-4 file-viewer-link-styling">
                    <div class="col-xs-12 col-sm-12 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
                        {% for item in data%}
                            <div class="row">
                                <div class="col">
                                    <a href="./{{item.collectionId}}/{{item.itemId}}/information/index.html">
                                        {{ item.collectionId}} / {{item.itemId}}
                                    </a>
                                    : {{item.data.title}}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>